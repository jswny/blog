<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= title(@view_module, @view_template, assigns) %></title>

    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/vendor.css") %>">
  </head>

  <body>
    <div class="container">
      <%= if @current_user do %>
        <div class="header">
          <span>Signed in as: <strong><%= @current_user.username %></strong></span>
          <div id="logout">
            <%= link "Log out", to: session_path(@conn, :delete, @current_user), method: "delete" %>
          </div>
        </div>
      <% end %>

      <%= if get_flash(@conn, :info) do %>
        <div class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></div>
      <% end %>

      <%= if get_flash(@conn, :error) do %>
        <div class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></div>
      <% end %>
      
      <div class="main">
        <%= render @view_module, @view_template, assigns %>
      </div>

    </div> <!-- /container -->
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
